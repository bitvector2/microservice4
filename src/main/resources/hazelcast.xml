<?xml version="1.0" encoding="UTF-8"?>

<hazelcast xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.hazelcast.com/schema/config"
           xsi:schemaLocation="http://www.hazelcast.com/schema/config
           http://www.hazelcast.com/schema/config/hazelcast-config-3.10.xsd">

    <group>
        <name>microservice4</name>
    </group>

    <instance-name>microservice4</instance-name>

    <properties>
        <property name="hazelcast.jmx">true</property>
        <property name="hazelcast.discovery.enabled">true</property>
    </properties>

    <network>
        <join>
            <multicast enabled="false"/>
            <aws enabled="false"/>
            <discovery-strategies>
                <discovery-strategy enabled="true" class="com.hazelcast.zookeeper.ZookeeperDiscoveryStrategy">
                    <properties>
                        <property name="zookeeper_url">10.107.136.253:2181</property>
                        <property name="zookeeper_path">/discovery/hazelcast/microservice4</property>
                        <property name="group">microservice4</property>
                    </properties>
                </discovery-strategy>
            </discovery-strategies>
        </join>
    </network>

</hazelcast>
